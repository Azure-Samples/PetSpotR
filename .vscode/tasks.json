{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "daprd-debug-frontend",
            "type": "daprd",
            "appId": "frontend",
            "appPort": 5114,
            "componentsPath": "./iac/dapr/local",
            "httpPort": 3501,
            "grpcPort": 50001,
            "metricsPort": 9091,
            "dependsOn": "build"
        },
        {
            "label": "daprd-down-frontend",
            "type": "shell",
            "command":[ "dapr stop --app-id frontend" ],
            "presentation": {
                "clear": true,
                "close": true,
                "reveal": "never"
           }
        },
        {
            "label": "daprd-debug-backend",
            "type": "daprd",
            "appId": "backend",
            "appPort": 5000,
            "componentsPath": "./iac/dapr/local",
            "httpPort": 3502,
            "grpcPort": 50002,
            "metricsPort": 9092
        },
        {
            "label": "daprd-down-backend",
            "type": "shell",
            "command":[ "dapr stop --app-id backend" ],
            "presentation": {
                "clear": true,
                "close": true,
                "reveal": "never"
           }
        }
    ]
}