{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/frontend/PetSpotR/PetSpotR.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "daprd-debug-frontend",
            "type": "daprd",
            "appId": "frontend",
            "appPort": 5114,
            "componentsPath": "./iac/dapr/local",
            "dependsOn": "build"
        },
        {
            "label": "daprd-down-frontend",
            "appId": "frontend",
            "type": "daprd-down"
        },
        {
            "label": "daprd-debug-backend",
            "type": "daprd",
            "appId": "backend",
            "appPort": 5000,
            "componentsPath": "./iac/dapr/local",
            "httpPort": 53109,
            "grpcPort": 53317,
            "metricsPort": 9091
        },
        {
            "label": "daprd-down-backend",
            "type": "daprd-down",
            "appId": "backend"
        }
    ]
}